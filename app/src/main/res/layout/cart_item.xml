<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView_cart_item"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bag1"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_name_cart_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.287"
            app:layout_constraintStart_toEndOf="@+id/imageView_cart_item"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Jute Kalahandri Bag" />

        <TextView
            android:id="@+id/textView_quantity_cart_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toStartOf="@+id/button_decrement"
            app:layout_constraintStart_toEndOf="@+id/button_increment"
            app:layout_constraintTop_toBottomOf="@+id/textView_name_cart_item"
            tools:text=" 1 " />

        <TextView
            android:id="@+id/textView_cart_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.112"
            app:layout_constraintStart_toEndOf="@+id/imageView_cart_item"
            app:layout_constraintTop_toBottomOf="@+id/button_increment"
            tools:text="150" />

        <Button
            android:id="@+id/button_increment"
            android:layout_width="34dp"
            android:layout_height="39dp"
            android:layout_marginStart="20dp"
            android:text="+"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/imageView_cart_item"
            app:layout_constraintTop_toBottomOf="@+id/textView_name_cart_item" />

        <Button
            android:id="@+id/button_decrement"
            android:layout_width="34dp"
            android:layout_height="39dp"
            android:layout_marginEnd="84dp"
            android:text="-"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_name_cart_item" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
